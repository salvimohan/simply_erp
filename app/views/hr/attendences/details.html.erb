

</aside><!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1 class="mb-4">Attendence List</h1>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
             
              <%= link_to 'Back', :back,  class: "right btn btn-primary m-4" %>
              <!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Checkin Time</th>
                    <th scope="col">Checkout Time</th>
                    <th scope="col">Working Hours</th>
                  </tr>
                </thead>
                <tbody>
                 <%  unless @attendences.blank? %>
                     <% @total_minutes = 0%> 
                     <% @attendences.each do |attendence| %>
                        <tr>
                          <td><%= attendence.checkin_time.strftime("%a %b %d %y %I:%M:%S %p") %></td>
                          <td><%= attendence.checkout_time&.strftime("%a %b %d %y %I:%M:%S %p") %></td>
                          <td><%= convert_in_hours(attendence.total_minutes) %></td>
                        </tr> 
                        <% @total_minutes += attendence.total_minutes.to_i %>
                      <% end  %> 
                      <tr>
                        <td>Total (8 hours 20 minutes)</td>
                        <td></td>
                        <td><%= convert_in_hours(@total_minutes) %></td>
                      </tr> 
                  <% else  %> 
                      <tr>
                        <td>No Attendance found</td>
                      </tr>
                  <% end  %> 
                </tbody>
              </table>
              <!-- End Table with stripped rows -->
            <%#= link_to 'Back', attendences_path, class: "right btn btn-primary" %>
            </div>
          </div>
         </div>
      </div>
    </section>

  </main>